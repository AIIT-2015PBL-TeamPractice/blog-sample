<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %> by <%= User.find(blog.author_id).username %></td>
        <% if user_signed_in? && current_user.id == blog.author_id %>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
<%= link_to 'New Blog', new_blog_path %>
<% end %>
